pipeline {
    agent none 
    stages{
        stage ('Git-Checkout'){
            agent{
                label 'controller'
            }
            steps {
                echo "Checking out from Git Repo";
                git branch: 'main', url: 'https://github.com/abeilharz/springboot.git'
            }
        }
        stage ('Compile'){
            agent{
                label 'agent1'
            }
            steps {
                echo "Compiling the Code"
                //sh './mvnw compile'
            }
        }
        stage ('Unit Test'){
            agent{
                label 'agent2'
            }
            steps {
                echo "Testing the code by a Unit Test"
                //sh './mvnw test'
            }
        }
        stage ('Code Quality Test'){
            agent{
                label 'agent2'
            }
            steps {
                echo "Code coverate and static code analysis"
            }
        }
    }
}